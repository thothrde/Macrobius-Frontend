import { MacrobiusAPI, MacrobiusPassage, SearchFilters } from '../../lib/enhanced-api-client';

// All endpoints support fallback data for development
const response = await MacrobiusAPI.passages.searchPassages(query, filters);
if (response.status === 'success') {
  setResults(response.data.passages);
}
