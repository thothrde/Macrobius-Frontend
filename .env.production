# Production Environment Variables for Vercel Deployment
# These variables will be automatically loaded by Next.js in production

# App Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=Macrobius
NEXT_PUBLIC_APP_VERSION=2.0.0
NEXT_PUBLIC_APP_URL=https://macrobius.vercel.app

# Oracle Cloud RAG Backend
NEXT_PUBLIC_ORACLE_URL=http://152.70.184.232:8082
NEXT_PUBLIC_RAG_ENABLED=true

# API Configuration
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# Security
NEXT_PUBLIC_CORS_ORIGIN=https://macrobius.vercel.app

# Database (if needed in future)
# DATABASE_URL=your_database_url_here

# External Services (if needed)
# SENTRY_DSN=your_sentry_dsn_here
# GOOGLE_ANALYTICS_ID=your_ga_id_here

# Cache Configuration
NEXT_PUBLIC_CACHE_TTL=300000

# Mobile Configuration
NEXT_PUBLIC_MOBILE_ENABLED=false

# Development vs Production
NEXT_PUBLIC_IS_DEVELOPMENT=false
NEXT_PUBLIC_SHOW_DEBUG_INFO=false

# Performance
NEXT_PUBLIC_ENABLE_SW=true
NEXT_PUBLIC_ENABLE_PRELOAD=true

# Localization
NEXT_PUBLIC_DEFAULT_LANGUAGE=DE
NEXT_PUBLIC_SUPPORTED_LANGUAGES=DE,EN,LA